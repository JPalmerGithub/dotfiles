#!/bin/sh                                                                                           
dt=`date --date=yesterday +'%Y-%m-%d'`
php=/home/bills/pgtools/parts/php/bin/php
phpdir=/home/bills/pgtools/parts/php
pgfouine=/home/bills/pgtools/parts/pgfouine/pgfouine.php
wwwdir=/home/www
pglogs=/var/log/pgsql

$php -c $phpdir/etc/php.ini \
    $pgfouine -file $pglogs/postgresql-$dt.csv \
    -format html -quiet \
    -logtype csvlog > $wwwdir/pg$dt.html

cp $wwwdir/pg$dt.html $wwwdir/pglast.html
